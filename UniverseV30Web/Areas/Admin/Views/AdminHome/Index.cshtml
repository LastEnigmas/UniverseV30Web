@using Core.DTOs.AdminViewModel
@model AdmingetAllUserViewModel

@{
    Layout = null;
}


<h1>Admin Page</h1>

<div class="Pannel">
    <div class="row">
        <form>
            <div class="col-sm-5 col-md-5">
                <input type="text" name="filterEmail" class="form-control" placeholder="Email" />
            </div>
            <div class="col-sm-5 col-md-5">
                <input type="text" name="filterUsername" class="form-control" placeholder="Username" />
            </div>
            <div class="col-sm-2 col-md-2">
                <button type="submit" class="btn btn-info">Find</button>
            </div>
            @*            <div class="col-sm-2 col-md-2">
            <button type="button" class="btn-success">
            <a asp-area="Admin" asp-controller="AdminHome" asp-action="CreateUser">
            Create New User
            </a>
            </button>
            </div>*@
            <button type="button">
                <a asp-area="Admin" asp-controller="AdminHome" asp-action="CreateSubject">
                    Create Subject
                </a>
            </button>
        </form>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Position</th>
                <th>Time Crated</th>
                <th>Command</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <p class="text-success">Active</p>
                        }
                        else
                        {
                            <p class="text-success">De Active</p>
                        }
                    </td>
                    <td>@user.CreateTime</td>
                    <td>
                        <a asp-area="Admin" asp-controller="AdminHome" asp-action="EditUser" class="btn btn-warning btn-sm" asp-route-id="@user.Id">
                            Edit
                        </a>
                        <a asp-area="Admin" asp-controller="AdminHome" asp-action="DeleteUser" class="btn btn-danger btn-sm" asp-route-id="@user.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

